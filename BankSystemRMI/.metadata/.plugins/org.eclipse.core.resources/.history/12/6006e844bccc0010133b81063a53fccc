package rmi;
import java.rmi.Remote;
import java.rmi.RemoteException;

public interface BankService extends Remote{
	

    // Authentification
    String login(String cardNumber, String pin) throws RemoteException;

    // Check balance
    float getBalance(String ssn) throws RemoteException;

    // Deposit
    boolean deposit(String ssn, float amount) throws RemoteException;

    // Withdraw
    int withdraw(String ssn, float amount, String pin) throws RemoteException;
}
