package rmi;

import java.rmi.Remote;
import java.rmi.RemoteException;

public interface BankService extends Remote {
    String login(String cardNumber, String pin) throws RemoteException;
    double getBalance(String ssn) throws RemoteException;
    boolean deposit(String ssn, double amount) throws RemoteException;
    int withdraw(String ssn, double amount, String pin) throws RemoteException;
    boolean changePin(String cardNumber, String oldPin, String newPin) throws RemoteException;
    
    boolean saveCustomerData(String formno, String ssn, String name, String dob, String gender,
            String email, String marital, String address, String city,
            String state, String zip) throws RemoteException;

   boolean saveAdditionalData(String formno, String ssn, String fname, String passportNo, String race,
              String category, String income, String education, String occupation,
              String seniorCitizen, String existAcnt) throws RemoteException;

    boolean saveAccountData(String ssn, String accountType, String cardNumber, String pin,
           String atmCard, String chequeBook, String internetBanking,
           String mobileBanking, String eStatement, String emailSMS) throws RemoteException;
}
