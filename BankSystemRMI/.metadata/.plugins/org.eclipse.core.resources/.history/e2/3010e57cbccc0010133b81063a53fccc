package client;

public class ATMClient {
    public static void main(String[] args) {
        try {
            Registry reg = LocateRegistry.getRegistry("localhost", 1099);
            BankService service = (BankService) reg.lookup("bankService");

            // EXEMPLE : login
            if(service.login("123456", "1111")) {
                System.out.println("Login successful");

                double bal = service.checkBalance("123456");
                System.out.println("Balance = " + bal);

                boolean ok = service.withdraw("123456", 200);
                System.out.println(ok ? "Retrait effectu√©" : "Solde insuffisant");
            } else {
                System.out.println("Login failed");
            }

        } catch(Exception e) {
            e.printStackTrace();
        }
    }
}