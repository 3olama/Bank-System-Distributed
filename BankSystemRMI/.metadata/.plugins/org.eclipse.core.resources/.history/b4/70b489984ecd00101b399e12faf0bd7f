package server;

import java.rmi.Naming;//lier (bind) ou rechercher (lookup) des objets distants dans le registre RMI
import java.rmi.registry.LocateRegistry;


public class ServerMain {
    public static void main(String[] args) {
        try {
            LocateRegistry.createRegistry(1099);  // cr√©er le registre RMI sur le port 1099
            BankServiceImpl service = new BankServiceImpl(); 
            Naming.rebind("bankService", service);  //Enregistre(bind)l'objet dans le registre RMI
            System.out.println("RMI Server is running...");
            System.out.println("BankService is ready...");

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
